<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Harga.HargaTaniActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartaniharga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar1"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_close_tani_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbartaniharga"
        app:srcCompat="@drawable/ic_close_black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_harga_tani"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_close_tani_harga"
        tools:listitem="@layout/row_harga_tani" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Daftar Harga Jual Hasil Pertanian"
        android:textColor="#BFBFBF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/im_close_tani_harga"
        app:layout_constraintStart_toEndOf="@+id/im_close_tani_harga"
        app:layout_constraintTop_toTopOf="@+id/im_close_tani_harga" />
</androidx.constraintlayout.widget.ConstraintLayout>